{% block pagination %}
    {% if pages > 0 %}
    <nav aria-label="...">
        <ul class="pagination">
            {% if current_page - 1 > 0 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app.transaction.get', {'page': current_page - 1}) }}" tabindex="-1" aria-disabled="true">Previous</a>
                </li>
            {% endif %}
            {% for page in 1..pages %}
                <li class="page-item {% if current_page == page %}active{% endif %}" aria-current="page">
                    <a class="page-link" href="#">{{ page }}</a>
                </li>
            {% endfor %}

            {% if current_page + 1 <= pages %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app.transaction.get', {'page': current_page + 1}) }}">Next</a>
                </li>
            {% endif %}
        </ul>
    </nav>
    {% endif %}
{% endblock %}